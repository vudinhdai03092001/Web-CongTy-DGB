<link rel="stylesheet" href="https://cdn.quilljs.com/1.3.6/quill.snow.css">
{{> headerAdmin}}
{{> sidebar}}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Bài Viết</h1><br>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"
            data-bs-whatever="@mdo">Thêm Mới</button>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <table class="table table-bordered " style="text-align: center;">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Tiêu đề</th>
                    <th scope="col">Thể loại</th>
                    <th scope="col">Nội dung</th>
                    <th colspan="2">Hành động</th>
                </tr>
            </thead>
            <tbody>
                {{#each baiviet}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.title}}</td>
                    <td>{{this.category}}</td>
                    <td> </a><button type="button" class="btn btn-success"><a href="/admin/bai-viet/{{this._id}}/detail"
                                style="color: aliceblue;">Xem chi tiết</a></button></td>
                    <td> <a href="/admin/bai-viet/{{this._id}}/edit"><i class="bi bi-pencil"
                                style="color: rgb(7, 255, 56);"></i></a></td>
                    <td> <a> <i class="bi bi-trash3" data-bs-toggle="modal" data-bs-target="#delete-work-modal"
                                data-id="{{this._id}}" style="color: red;"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </section>
</main>
{{> footerAdmin}}

{{!-- modal thêm --}}

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-add">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm bài viết</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="" method="POST">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Tiêu đề:</label>
                        <input type="text" class="form-control" id="title" name="title" style="width: 30%;">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Chọn thể loại:</label><br>
                        <select class="form-select" id="category" aria-label="Default select example">
                            <option value="Giới thiệu">Giới thiệu</option>
                            <option value="Dịch vụ">Dịch vụ</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Nội dung:</label>
                        <div id="editor" style="min-height: 300px;"></div>
                    </div>
                </form>
                <div class="modal-footer">
                    <button class="btn btn-primary" onclick="onclickBaiViet()">Thêm mới</button>

                </div>

            </div>
        </div>
    </div>
</div>

{{!-- modal xóa --}}
<div id="delete-work-modal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa Lịch Bài Viết </h5>
                {{!-- <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                --}}
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa bài viết này không ?</p>
            </div>
            <div class="modal-footer">
                <button id="btn-delete" type="button" class="btn btn-danger">Đồng ý xóa</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Thoát</button>

            </div>
        </div>
    </div>
</div>
{{!-- form delete --}}
<form name="delete-form" method="POST"></form>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<script>
    // quill text
    var quill = new Quill('#editor', {
        theme: 'snow',
        placeholder: 'Nhập văn bản ở đây...',

    });
    // thêm bài viết
    function onclickBaiViet() {

        $.ajax({
            url: '/admin/bai-viet/creat',
            type: 'POST',
            data: {
                category: $('#category').val(),
                title: $('#title').val(),
                content: quill.root.innerHTML
            }
        })
            .then(() => {
                window.location.replace('/admin/bai-viet')
            })
    }
    // delete 
    const exampleModal = document.getElementById('delete-work-modal')
    exampleModal.addEventListener('show.bs.modal', event => {
        var deleteForm = document.forms['delete-form']
        var btnDeleteCalendar = document.getElementById('btn-delete')
        const button = event.relatedTarget
        //get id from button delete
        const recipient = button.getAttribute('data-id')

        btnDeleteCalendar.onclick = function () {
            deleteForm.action = '/admin/bai-viet/' + recipient + '?_method=DELETE'
            deleteForm.submit()
        }
    })

</script>