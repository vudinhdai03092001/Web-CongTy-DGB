                                                        <option value="Hết hiệu lực">Hết hiệu lực</option>
                                                        <option value="Đã gia hạn">Tạm dừng hiệu lực</option>
                                                    </select>
                                                </div>
                                                <div class="modal-footer">
                                                    <button class="btn btn-primary" type="submit">Chỉnh sửa</button>
                                                </div>
                                            </div>
                                        </div>


                                    </form>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

